<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title </title>
    <!-- Font awesome CDN -->
    <link href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet">

    @*
        Rendering Style & Script data which is predefined in `App_Start/BundleConfig.cs` file
    *@
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <div class="top-margin">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
            @Html.ActionLink("Crud Example", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        @*
                    Html.ActionLink(Display text, Action Name, Controller, HTML Attributes)
                        *@
                        @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link " })
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Other Pages
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            @Html.ActionLink("About Page", "About", "Home", new { area = "" }, new { @class = "dropdown-item" })

                            @Html.ActionLink("Contact Page", "Contact", "Home", new { area = "" }, new { @class = "dropdown-item" })
                        </div>
                    </li>
                </ul>
                @*
            if Session is not set or user has not logged in then displaying Login and register options
                *@
                @{ if (Session["UserID"] == null)
                    {
                        <div class="my-2 my-lg-0">
                            @Html.ActionLink("Login", "Login", "Account", new { area = "" }, new { @class = "btn btn-primary my-2 my-sm-0" }) 
                            &nbsp;
                            @Html.ActionLink("Create Account", "Register", "Account", new { area = "" }, new { @class = "btn btn-warning my-2 my-sm-0" })

                        </div>
                    }
                }

            </div>
        </nav>
    </div>

    <div class="container main-body">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jqueryslim")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)

</body>
</html>
